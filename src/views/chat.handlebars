<main class="container">
    <h1 class="text-center">Chat</h1>
    <div class="containerChat container">
        <ul id="messages"></ul>
        <form action="">
            <div>
                <label for="">{{user.email}}</label>
                <input id="email" type="email" value="{{user.email}}" required placeholder="Enter your email"
                    autocomplete="off" style="display: none;"/>
            </div>
            <div>
                <input id="m" autocomplete="off" placeholder="Enter your message" />
            </div>
            <button class="btn btn-secondary btn-sm bg-black col btnAdd">SEND</button>
        </form>
    </div>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>