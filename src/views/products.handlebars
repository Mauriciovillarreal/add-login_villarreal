<main class="container">
    <h1 class="text-center">Products</h1>
    <ul id="products-list" class="row">
        {{#each products}}
        <li class="col">
            <img src="{{this.thumbnails}}" width="250px" alt="">
            <div class="cardDetail">
                <h2 class="text-start h5">{{this.brands}}</h2>
                <h3 class="text-start">{{this.name}}</h3>
                <div class="row">
                    <div div class="text-start h4 col">${{this.price}}</div>
                    <button type="button" class="btn btn-secondary btn-sm bg-black col btnAdd" data-product-id="{{this._id}}">ADD TO CART</button>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</main>
<div class="pageProducts">
    {{#if hasPrevPage}}
    <a href="/?numPage={{prevPage}}">ANTERIOR</a>
    {{/if}}
    <label>PAGINA {{page}}</label>
    {{#if hasNextPage}}
    <a href="/?numPage={{nextPage}}">SIGUIENTE</a>
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/products.js"></script>